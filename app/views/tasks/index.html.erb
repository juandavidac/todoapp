<p id="notice"><%= notice %></p>

<h1>To do</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do.each do |task| %>
      <%= render partial: 'task', locals: {task: task} %>
    <% end %>
  </tbody>
</table>

<h1>Doing</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doing.each do |task| %>
      <%= render partial: 'task', locals: {task: task} %>
    <% end %>
  </tbody>
</table>

<h1>Done</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @done.each do |task| %>
      <%= render partial: 'task', locals: {task: task} %>
    <% end %>
  </tbody>
</table>

<br>

